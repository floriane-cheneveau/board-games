{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>PlayerNumber</th>
            <th>MinimumAge</th>
            <th>Description</th>
            <th>Poster</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
    {% for game in games %}
        <tr>
            <td>{{ game.id }}</td>
            <td>{{ game.name }}</td>
            <td>{{ game.playerNumber }}</td>
            <td>{{ game.minimumAge }}</td>
            <td>{{ game.description }}</td>
            <td>{{ game.poster }}</td>
            <td>
                <a href="{{ path('game_show', {'id': game.id}) }}">show</a>
                <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('game_new') }}">Create new</a>
{% endblock %}
