{% extends 'base.html.twig' %}

{% block title %}Jeu #{{ game.id }}{% endblock %}

{% block body %}

<h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>PlayerNumber</th>
                <td>{{ game.playerNumber }}</td>
            </tr>
            <tr>
                <th>MinimumAge</th>
                <td>{{ game.minimumAge }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ game.poster }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('game_index') }}">back to list</a>

    <a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>

