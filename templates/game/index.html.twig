
{% extends 'base.html.twig' %}


{% block title %}All games{% endblock %}


{% block body %}

    <h1>Tous nos jeux: </h1>
    <div class="ajoutjeudansjeu">
        <a href="{{ path('game_new') }}">Ajouter un nouveau jeu de société  la liste</a>
    </div>

    {% for game in games %}

        <div class="jeutheme">

            <h2>{{ loop.index }} / {{ game.name }} - Catégorie : {{ game.category.name }}</h2>

            <p>{{ game.description }}</p>
            {# Lien vers la fiche de la série : #}
            <a href="{{ path("game_show", { id: game.id }) }}">Voir la fiche</a>

        </div>

    {% else %}

        Aucun jeu trouvé.

    {% endfor %}

            <div class="buttonaccdansjeu">
                <a href="{{ path('app_index') }}">
                    
                    Retour à l'accueil
                    
                </a>
            </div>

{% endblock %}
